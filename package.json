    "graphql": "^14.3.0",
    "merge-graphql-schemas": "^1.5.8",
    "mongoose": "^5.5.7",
    "nodemon": "^1.19.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
